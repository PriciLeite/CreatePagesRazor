@page
@model MyRazorApp.Pages.Index


<h1>Categorias</h1>    
<div>
    <partial name="Shared/NavMenuPartial" />  
    <table>
        <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Price</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Title</td>
                    <td>@category.Price.ToString(format:"C", provider:new CultureInfo(name:"pt-BR"))</td>
                </tr>      
            }
        </tbody>
    </table>
</div>






